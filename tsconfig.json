{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "Node",
    "paths": {
      "@/*": [
        "src/renderer/*"
      ],
      "~/*": [
        "src/*"
      ],
      "root/*": [
        "./*"
      ],
      "#/*": [
        "src/common/*"
      ]
    },
    "resolveJsonModule": true,
    "typeRoots": [
      "./src/common/types",
      "./node_modules/@types"
    ],
    "strict": true,
    "importHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.png"
  ],
  "vueCompilerOptions": {
    "target": 3.3
  }
}
